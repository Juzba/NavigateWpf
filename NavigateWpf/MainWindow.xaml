<Window
    x:Class="NavigateWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavigateWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:NavigateWpf.View"
    xmlns:viewmodel="clr-namespace:NavigateWpf.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:ApplicationViewModel}"
    mc:Ignorable="d">

    <ContentControl Content="{Binding CurrentPage}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodel:Page1ViewModel}">
                <view:Page1View />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:Page2ViewModel}">
                <view:Page2View />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:Page3ViewModel}">
                <view:Page2View />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
