<UserControl
    x:Class="NavigateWpf.View.Page2View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavigateWpf.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:NavigateWpf.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:Page2ViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="40"
                Text="Page 2" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="200"
                    Height="70"
                    Margin="10"
                    Command="{Binding Page1Command}"
                    Content="Page 1"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="70"
                    Margin="10"
                    Command="{Binding Page2Command}"
                    Content="Page 2"
                    FontSize="40" />
                <Button
                    Width="200"
                    Height="70"
                    Margin="10"
                    Command="{Binding Page3Command}"
                    Content="Page3"
                    FontSize="40" />
            </StackPanel>
            <StackPanel
                Height="50"
                Margin="20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="20,0"
                    Command="{Binding Frame1Command}"
                    Content="Frame1"
                    FontSize="30" />
                <Button
                    Margin="20,0"
                    Command="{Binding Frame2Command}"
                    Content="Frame2"
                    FontSize="30" />
            </StackPanel>
        </StackPanel>
        <Frame x:Name="FrameMainBox" Grid.Row="1" />
    </Grid>
</UserControl>
